<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-5dp"
        android:background="#000"
        android:paddingLeft="15dp"
        android:paddingRight="0dp">


        <EditText
            android:id="@+id/etiqueta"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:height="100dp"
            android:background="#fff"
            android:textColor="#000"
            android:textAlignment="textEnd"
            android:textSize="35dp" />


        <Button
            android:id="@+id/BorrarT"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/etiqueta"
            android:layout_marginTop="5dp"
            android:paddingLeft="0dp"
            android:text="C"
            android:textSize="10dp"

            />

        <Button
            android:id="@+id/siete"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/BorrarT"
            android:text="7"
            android:textSize="10dp" />

        <Button
            android:id="@+id/cuatro"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/siete"
            android:text="4"
            android:textSize="10dp"

            />

        <Button
            android:id="@+id/uno"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/cuatro"
            android:text="1"
            android:textSize="10dp" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/etiqueta"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/BorrarT"
            android:text="/"
            android:textSize="10dp" />

        <Button
            android:id="@+id/por"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/etiqueta"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/div"
            android:text="X"
            android:textSize="10dp" />

        <Button
            android:id="@+id/borrarp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/etiqueta"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/por"
            android:text="Borrar"
            android:textSize="10dp" />

        <Button
            android:id="@+id/ocho"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/div"
            android:layout_toRightOf="@id/siete"
            android:text="8"
            android:textSize="10dp"

            />

        <Button
            android:id="@+id/cinco"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/ocho"
            android:layout_toRightOf="@id/cuatro"
            android:text="5"
            android:textSize="10dp"

            />

        <Button
            android:id="@+id/dos"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/cinco"
            android:layout_toRightOf="@id/uno"
            android:text="2"
            android:textSize="10dp"


            />

        <Button
            android:id="@+id/cero"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/uno"
            android:layout_toLeftOf="@id/punto"
            android:text="0"
            android:textSize="10dp"

            />

        <Button
            android:id="@+id/punto"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/dos"
            android:layout_toRightOf="@id/siete"
            android:text="."
            android:textSize="20dp"

            />


        <Button
            android:id="@+id/nueve"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/por"
            android:layout_toRightOf="@id/ocho"
            android:text="9"
            android:textSize="10dp" />

        <Button
            android:id="@+id/menos"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/borrarp"
            android:layout_toRightOf="@id/nueve"
            android:text="-"
            android:textSize="10dp"

            />

        <Button
            android:id="@+id/seis"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/nueve"
            android:layout_toRightOf="@id/cinco"
            android:text="6"
            android:textSize="10dp"

            />

        <Button
            android:id="@+id/mas"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/menos"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@id/seis"

            android:text="+"
            android:textSize="10dp" />

        <Button
            android:id="@+id/tres"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/seis"
            android:layout_toRightOf="@id/dos"
            android:text="3"
            android:textSize="10dp"

            />

        <Button
            android:id="@+id/parentesis"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/mas"
            android:layout_toRightOf="@id/tres"
            android:text="( )"
            android:textSize="10dp"

            />

        <Button
            android:id="@+id/masmenos"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/tres"
            android:layout_toRightOf="@id/punto"
            android:text="+/-"
            android:textSize="10dp"

            />

        <Button
            android:id="@+id/igual"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/parentesis"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/masmenos"

            android:text="="
            android:textSize="10dp" />

    </RelativeLayout>
</RelativeLayout>
